{% extends 'base.j2' %}

{% block title %}Locations{% endblock %}
{% block content %}

    <h2>Locations</h2>
    <div class="table-container">
      <table>
        <tr>
            <th>ID</th>
            <th>Location Name</th>
            <th>Type</th>
            <th>Doctors</th>
            <th colspan="2">Actions</th>
        </tr>
        <tbody>
        <!-- Each Location -->
        {% for location in Locations %}
            <tr>
                <!-- Row Values -->
                {% for value in location %}
                    <td>{{ value }}</td>
                {% endfor %}
                <td><a href="{{ url_for('location_info', location_id=location[0]) }}">View List</a></td>
                <td><a href="{{ url_for('edit_location', location_id=location[0]) }}">Edit</a></td>
                <td><a href="{{ url_for('delete_location', location_id=location[0]) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>

    <p>&nbsp;</p>
    <!-- Add -->
    <div id="insert" style="display: block">
        <form id="addLocation" method="post" action="/locations">
            <legend>Add Location</legend>
            <fieldset class="fields">
                <label>Location Name</label> <input type="text" name="location_name" required>
                <label>Type</label> <input type="text" name="type" required>
            </fieldset>
            <input class="btn btn-success"  type="submit" id="addLocation" value="Add Location">
            <input class="btn btn-danger"type="button" value="Cancel">
        </form>
    </div>

  {% endblock %}
