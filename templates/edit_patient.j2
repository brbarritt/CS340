{% extends 'base.j2' %}

{% block title %}Edit Patient{% endblock %}
{% block content %}

    <h2>Edit Patient</h2>
    <div class="edit-form">
        <form method="post" action="/edit_patient/{{ patient[0] }}">
            
            <label for="first_name">First Name:</label>
            <input type="text" name="first_name" value="{{ patient[1] }}">

            <label for="last_name">Last Name:</label>
            <input type="text" name="last_name" value="{{ patient[2] }}">

            <label for="address">Address:</label>
            <input type="text" name="address" value="{{ patient[3] }}">

            <label for="phone_number">Phone Number:</label>
            <input type="text" name="phone_number" value="{{ patient[4] }}">
            <div class="button-container">
                <input class="btn btn-success" type="submit" value="Save Changes">
                <input class="btn btn-danger" type="button" value="Cancel">
            </div>
        </form>
    </div>

{% endblock %}
