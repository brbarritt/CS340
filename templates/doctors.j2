{% extends 'base.j2' %}

{% block title %}Doctors{% endblock %}
{% block content %}

    <h2>Doctors</h2>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Specialty</th>
                    <th>Appointments<th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
              <!-- Each Doctor -->
                {% for doctor in Doctors %}
                    <tr>
                        <!-- Row Values -->
                        {% for value in doctor %}
                            <td>{{ value }}</td>
                        {% endfor %}
                        <td><a href="{{ url_for('doctor_info', doctor_id=doctor[0]) }}">View Details</a></td>
                        <td><a href="{{ url_for('edit_doctor', doctor_id=doctor[0]) }}">Edit</a></td>
                        <td><a href="{{ url_for('delete_doctor', doctor_id=doctor[0]) }}">Delete</a></td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

    <p>&nbsp;</p>
    <!-- Add -->
    <div style="display: block">
        <form id="addDoctor" method="post" action="/doctors">
            <legend>Add Doctor</legend>
            <fieldset>
                <label>First Name: </label> <input type="text" name="first_name" required>
                <label>Last Name: </label> <input type="text" name="last_name" required>
                <label>Specialty: </label> <input type="text" name="specialty" required>
            </fieldset>
            <input class="btn btn-success" type="submit" value="Add Doctor">
            <input class="btn btn-danger" type="button" value="Cancel">
      </form>
    </div>


  {% endblock %}
</html>