{% extends 'base.j2' %}

{% block title %}Doctors{% endblock %}
{% block content %}

    <h2>Doctors</h2>
    <div class="table-container">
      <table>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Specialty</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
          <!-- Each Doctor -->
          {% for doctor in Doctors %}
              <tr>
                  <!-- Row Values -->
                  {% for value in doctor %}
                      <td>{{ value }}</td>
                  {% endfor %}
                  <td><a href="{{ url_for('edit_doctor', doctor_id=doctor[0]) }}">Edit</a></td>
                  
                  <td><a href="{{ url_for('delete_doctor', doctor_id=doctor[0]) }}">Delete</a></td>
              </tr>
          {% endfor %}
              
        </tbody>
      </table>
    </div>

    <p>&nbsp;</p>
    <!-- Add -->
    <div id="insert" style="display: block">
      <form id="addDoctor">
          <legend>Add Doctor</legend>
            <fieldset class="fields">
              <label> First Name </label> <input type="text" name="firstName">
              <label> Last Name </label> <input type="text" name="lastName">
              <label> Specialty </label> <input type="text" name="specialty">
            </fieldset>
            <input class="btn" type="submit" id="addDoctor" value="Add Doctor">
            <input class="btn" type="button" value="Cancel">
      </form>
    </div>


  {% endblock %}
</html>