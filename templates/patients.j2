          <td>(949) 310 7141</td>
        </tr>
      </table>
    </div>
    <p>&nbsp;</p>
    <!-- Add -->
    <div id="insert" style="display: block">
      <form id="addPatient">
        <legend><strong>Add Patient</strong></legend>
        <fieldset class="fields">
          <label>First Name</label> <input type="text" name="firstName">
          <label>Last Name</label> <input type="text" name="lastName">
          <label>Address</label> <input type="text" name="address">
          <label>Phone Number</label> <input type="text" name="phoneNumber">
        </fieldset>
        <input class="btn" type="submit" id="addPatient" value="Add Patient">
        <input class="btn" type="button" value="Cancel">
      </form>
    </div>

    <p>&nbsp;</p>

    <!-- Update -->
    <div id="update" style="display: block">
      <form id="updatePatient">
        <legend><strong>Update Patient</strong></legend>
        <fieldset class="fields">
          <label>ID:</label> 1
          <label>First Name</label> <input type="text" name="firstName" value="Bob">
          <label>Last Name</label> <input type="text" name="lastName" value="Smith">
          <label>Address</label> <input type="text" name="address" value="101 Oak St">
          <label>Phone Number</label> <input type="text" name="phoneNumber" value="(949) 222 2222">
        </fieldset>
        <input class="btn" type="submit" id="updatePatient" value="Save Update Patient">
        <input class="btn" type="button" value="Cancel">
      </form>
    </div>

    <p>&nbsp;</p>

    <!-- Delete -->
    <div id="delete" style="display: block">
      <form id="deletePatient">
        <legend><strong>Delete Patient</strong></legend>
        <fieldset class="fields">
          <p>Are you sure you wish to delete the following patient?</p>
          <label>ID:</label> 1
          <label>First Name: </label> Bob
          <label>Last Name: </label> Smith
          <label>Address: </label> 101 Oak St
          <label>Phone Number: </label> (949) 222 2222
        </fieldset>
        <input class="btn" type="submit" id="deletePatient" value="Delete Patient">
        <input class="btn" type="button" value="Cancel">
      </form>
    </div>

  {% endblock %}

</html>