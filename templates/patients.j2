{% extends 'base.j2' %}

{% block title %} Patients {% endblock %}
{% block content %}
    <h2>Patients</h2>
 
    <div class="table-container">
      <table>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th colspan="2">Actions</th>
        </tr>
        <tbody>
        <!-- Each Patient -->
        {% for patient in Patients %}
            <tr>
                  <!-- Row Values -->
                  {% for value in patient %}
                      <td>{{ value }}</td>
                      
                  {% endfor %}
                  <td><a href="{{ url_for('edit_patient', patient_id=patient[0]) }}">Edit</a></td>
                  <td><a href="{{ url_for('delete_patient', patient_id=patient[0]) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>

    <p>&nbsp;</p>
    <!-- Add -->
    <div id="insert" style="display: block">
      <form id="addPatient" method="post" action="/patients">
          <legend>Add Patient</legend>
          <fieldset class="fields">
              <label>First Name</label> <input type="text" name="first_name" required>
              <label>Last Name</label> <input type="text" name="last_name" required>
              <label>Address</label> <input type="text" name="address" required>
              <label>Phone Number</label> <input type="text" name="phone_number" required>
          </fieldset>
          <input class="btn btn-success" type="submit" id="addPatient" value="Add Patient">
          <input class="btn btn-danger" type="button" value="Cancel">
      </form>
    </div>


  {% endblock %}

</html>